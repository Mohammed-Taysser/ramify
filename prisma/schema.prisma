generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nodes     Node[]
  trees     Tree[]
}

model Tree {
  id        Int      @id @default(autoincrement())
  title     String?
  createdBy Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nodes     Node[]
  user      User?    @relation(fields: [createdBy], references: [id])
}

model Node {
  id        Int       @id @default(autoincrement())
  treeId    Int
  parentId  Int?
  operation OPERATION
  totals    Float
  value     Float
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [createdBy], references: [id])
  createdBy Int
  tree      Tree      @relation(fields: [treeId], references: [id])
}

enum OPERATION {
  START
  END
  ADD
  SUBTRACT
  MULTIPLY
  DIVIDE
}
