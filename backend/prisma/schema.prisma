generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  name        String
  password    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  operations  Operation[]
  discussions Discussion[]
}

model Discussion {
  id            Int         @id @default(autoincrement())
  title         String?
  createdBy     Int
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  startingValue Decimal     @db.Decimal(20, 10)
  isEnded       Boolean     @default(false)
  endedAt       DateTime?
  operations    Operation[]
  user          User?       @relation(fields: [createdBy], references: [id])
}

model Operation {
  id            Int            @id @default(autoincrement())
  discussionId  Int
  parentId      Int?
  title         String?
  operationType OPERATION_TYPE
  value         Decimal        @db.Decimal(20, 10)
  beforeValue   Decimal        @default(0) @db.Decimal(20, 10)
  afterValue    Decimal        @default(0) @db.Decimal(20, 10)
  depth         Int            @default(0)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  user          User?          @relation(fields: [createdBy], references: [id])
  createdBy     Int
  discussion    Discussion     @relation(fields: [discussionId], references: [id])
  parent        Operation?     @relation("OperationHistory", fields: [parentId], references: [id], onDelete: SetNull)
  children      Operation[]    @relation("OperationHistory")
}

enum OPERATION_TYPE {
  ADD
  SUBTRACT
  MULTIPLY
  DIVIDE
}
